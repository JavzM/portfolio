---
import InfoCard from "./InfoCard.astro";

interface Props {
    title: string;
    company: string;
    description: string;
    date: string;
}

const { title, company, description, date } = Astro.props;
---

<article
    class="relative mx-12 pb-10 md:gap-10
         before:absolute before:left-[-35px] before:top-0 before:h-full
         before:border-l-2 before:border-black/20 dark:before:border-white/15"
>
    <!-- Timeline marker -->
    <div class="relative">
        <span
            class="absolute top-3 -left-[43px] text-5xl text-slate-600 dark:text-slate-400"
            aria-hidden="true"
        >
            &bull;
        </span>
    </div>

    <!-- Content -->
    <InfoCard>
        <header class="flex items-start justify-between gap-4">
            <h3 class="text-2xl font-bold leading-tight">{title}</h3>
            <time class="text-sm text-gray-500 dark:text-white/70">{date}</time>
        </header>

        <h4 class="mt-1 font-medium text-slate-600 dark:text-slate-400">
            {company}
        </h4>

        <p
            class="mt-4 text-sm leading-relaxed text-black/80 dark:text-white/80"
        >
            {description}
        </p>
    </InfoCard>
</article>
